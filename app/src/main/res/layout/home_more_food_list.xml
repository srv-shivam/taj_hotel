<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="270dp"
    android:layout_marginBottom="20dp"
    android:background="@color/white"
    android:elevation="150dp"
    app:cardCornerRadius="26dp"
    app:cardMaxElevation="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/food_item_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mutton_biriyani" />

        <ImageView
            android:id="@+id/food_item_heart"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/heart_design_layout"
            android:padding="6dp"
            android:src="@drawable/ic_heart_svgrepo_com__1_" />

        <TextView
            android:id="@+id/food_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_item_img"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/mclaren"
            android:padding="6dp"
            android:text="Hyderabadi Mutton Biryani"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/food_item_price"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/food_item_img"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/mclaren"
            android:gravity="center"
            android:padding="6dp"
            android:text="â‚¹450"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/food_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_item_name"
            android:layout_marginStart="10dp"
            android:paddingStart="6dp"
            android:text="Authentic spicy Hyderabadi mutton biryani"
            android:textColor="@color/backgroundBottomColor" />

        <RatingBar
            android:id="@+id/food_item_ratings"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:layout_below="@id/food_item_description"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="6dp"
            android:numStars="5"
            android:padding="8dp"
            android:progressBackgroundTint="#388E3C"
            android:progressTint="#388E3C"
            android:rating="3.5"
            android:scaleX="1.5"
            android:scaleY="1.2"
            android:secondaryProgressTint="#00796B" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/food_item_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/price_design"
            android:padding="12dp"
            android:text="Add To Cart"
            android:elevation="100dp"
            android:textColor="@color/black" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

